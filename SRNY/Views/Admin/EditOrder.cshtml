@model SRNY.Models.Order

@{
    ViewData["Title"] = "EditOrder";
    Layout = "_AdminLayout";
}

<div class="userAccount">
<h3>Edit Order</h3>
<hr />
<div class="row">
    <div class="col-md-12 EditForm">
        <form asp-action="EditOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" class="form-control" hidden/>
                <input asp-for="CartId" class="form-control" hidden/>
                <input asp-for="ShipId" class="form-control" hidden/>           
                <input asp-for="Street" class="form-control" hidden/>
                <input asp-for="Apartment" class="form-control" hidden/>
                <input asp-for="zip" class="form-control" hidden/>
                <input asp-for="FirstName" class="form-control" hidden/>
                <input asp-for="LastName" class="form-control" hidden/>
                <input asp-for="Phone" class="form-control" hidden/>
                <input asp-for="Email" class="form-control" hidden/>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
             <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" id="editSave"/>
            </div>
        </form>
         <div class="BackToList">
            <a asp-action="Orders" asp-controller="Admin">Back to List</a>
        </div>
    </div>
</div>



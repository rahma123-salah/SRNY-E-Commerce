@model SRNY.Models.Images

@{
    ViewData["Title"] = "uploadImage";
        Layout = "_AdminLayout";
}

<h2>upload Image</h2>

<div class="row">
    <div class="col-md-12 EditForm">
        <form asp-action="uploadImage" method="post"  enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="image" class="control-label"></label>
                <input asp-for="image" class="form-control" type="file" name="image" />
                <span asp-validation-for="image" class="text-danger"></span>
            </div>
             <div class="form-group">
                <input asp-for="ProductId" class ="form-control" hidden/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

